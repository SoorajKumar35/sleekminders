<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_rect_shape"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:text="TextView"
        android:height="20dp"
        android:textSize = "20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_reminder_row_2_Date"
        android:layout_below="@+id/new_reminder_row_2_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:height="27dp"
        android:paddingTop="3dp"
        android:textSize = "15dp"
        android:paddingBottom="3dp"
        android:id="@+id/new_reminder_row_2_addr"
        android:layout_below="@+id/new_reminder_row_2_Date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_reminder_row_2_title"
        android:width = "120dp"
        android:height = "35dp"
        android:textSize = "25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>